
/**
 * Class of Book
 * Contains an ID, name, author, quantity, image
 *
 * @author A Forgan
 * @version 25/05/2021
 */
public class Book
{
    // fields
    private int id;
    private String name;
    private String author;
    private int quantity;
    private String image; // to be completed
    
    /**
     * Constructor to make a book object
     */
    public Book(int id, String nm, String auth, int qty)
    {
        this.id = id;
        this.name = nm;
        this.author = auth;
        this.quantity = qty;
    }
    
    /**
     * Get ID
     */
    public int getId()
    {
        return this.id;
    }
    
    /**
     * Get name
     */
    public String getName()
    {
        return this.name;
    }
    
    /**
     * Get author
     */
    public String getAuthor()
    {
        return this.author;
    }
    
    /**
     * Get quantity
     */
    public int getQuantity()
    {
        return this.quantity;
    }
}
